<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.transition_pixel2.MainActivity">


    <Button
        android:id="@+id/start_second_with_fix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start second with transition fix"/>

    <Button
        android:id="@+id/start_second_without_fix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start second without transition fix"/>

    <Button
        android:id="@+id/start_second_without_transition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start second without transition"/>


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="?attr/actionBarSize"
        android:transitionName="toolbar"/>

</LinearLayout>
